{
  "name": "uneve-app",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "postinstall": "husky install",
    "linter": "yarn workspace @uneve/eslint-config",
    "client-web": "yarn workspace @uneve/client-web",
    "run:eslint": "eslint --fix packages",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build --stream",
    "dev": "lerna run dev --stream"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/styled-components": "^5.1.9",
    "@uneve/eslint-config": "*",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.2.3",
    "typescript": "^4.2.4"
  }
}
